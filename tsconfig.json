{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig to read more about this file */

        /* Projects */
        "incremental": true,
        "rootDir": "./src",
        "baseUrl": ".",
        "paths": {
            "@tests/*": ["./src/tests/*"]
        },

        /* Language and Environment */
        "target": "es2016",
        "jsx": "react",

        /* Modules */
        "module": "commonjs",
        "moduleResolution": "node",

        /* JavaScript Support */
        "allowJs": true,

        /* Interop Constraints */
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        /* Type Checking */
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*"]
}
